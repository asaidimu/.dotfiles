#!/usr/bin/env bash

_open_session() {
    session_name="$1"

    if [ -n "$TMUX" ]; then
        tmux switch-client -t "$session_name"
    else
        tmux attach-session -t "$session_name"
    fi
}

_main(){
    locations="$HOME/projects $HOME/.dotfiles"
    project=$(find `echo "$locations" | tr ' ' "\n" | xargs` -type d -mindepth 1 -maxdepth 1 | fzf)
    session_name=$(basename "$project" | sed -E "s/^(\.)+//; s/\./_/g" )

    if tmux has -t "$session_name" 2> /dev/null; then
        _open_session "$session_name"
    else
        tmux new-session -ds "$session_name" -c "$project"
        _open_session "$session_name"
    fi
}

_main
