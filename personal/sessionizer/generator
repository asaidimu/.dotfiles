: > $SESSIONIZER_TARGET_LIST

dotfiles=`find ~/.dotfiles -name ".project" | xargs | sed -E "s/..project//g;s/\s/:/g"`
SESSION_TARGETS="$HOME:$HOME/Music/music:$HOME/.dotfiles:$dotfiles"

printf "$SESSION_TARGETS\n" | sed "s/:/\n/g" >> $SESSIONIZER_TARGET_LIST

SESSIONIZE="$HOME/projects:$HOME/books:$HOME/Music"

for target in $(echo $SESSIONIZE | sed "s/:/ /g"); do
  find "$target" -mindepth 1 -maxdepth 1 -type d >> "$SESSIONIZER_TARGET_LIST"
done

# vim:set ft=sh:
